<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="4dp"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/cropIconImageView"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:contentDescription="@string/crop_icon"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:src="@drawable/ic_tomato" />

        <TextView
            android:id="@+id/cropNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tomate"
            android:textSize="18sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintTop_toTopOf="@id/cropIconImageView"
            app:layout_constraintStart_toEndOf="@id/cropIconImageView"
            app:layout_constraintEnd_toStartOf="@id/favoriteButton"
            tools:text="Tomate" />

        <ImageButton
            android:id="@+id/favoriteButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_heart"
            android:contentDescription="@string/favorite"
            android:padding="6dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/levelTextView"
            app:tint="@android:color/white" />

        <TextView
            android:id="@+id/levelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Niveau 1"
            android:textSize="13sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:background="@drawable/level_badge_background"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Niveau 1" />

        <ImageView
            android:id="@+id/fertilizerButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_fertilizer"
            android:background="@drawable/fertilizer_badge_background"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="12dp"
            android:minHeight="20dp"
            android:visibility="gone"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="@string/fertilizer"
            app:layout_constraintTop_toBottomOf="@id/levelTextView"
            app:layout_constraintStart_toStartOf="@id/levelTextView"
            app:layout_constraintEnd_toEndOf="@id/levelTextView"
            tools:visibility="visible" />

        <LinearLayout
            android:id="@+id/pricesLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/cropIconImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/seedPriceTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Graines: 10G"
                android:textSize="11sp"
                android:textColor="@android:color/darker_gray"
                tools:text="Graines: 10G" />

            <TextView
                android:id="@+id/sellPriceTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Vente: 30G"
                android:textSize="11sp"
                android:textColor="@android:color/darker_gray"
                tools:text="Vente: 30G" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/startTimerButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/start_timer"
            android:textAllCaps="false"
            android:layout_marginTop="8dp"
            android:backgroundTint="@android:color/holo_green_dark"
            app:icon="@android:drawable/ic_menu_recent_history"
            app:layout_constraintTop_toBottomOf="@id/pricesLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Démarrer le timer (15 min)" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/stopTimerButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/stop_timer"
            android:textAllCaps="false"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            android:backgroundTint="@android:color/holo_red_dark"
            app:icon="@android:drawable/ic_menu_close_clear_cancel"
            app:layout_constraintTop_toBottomOf="@id/pricesLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Arrêter le timer (14:32)"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
